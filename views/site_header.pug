          button.btn.btn-info.btn_order_head(type='button', data-toggle='modal', data-target='#exampleModal')
            span(class='button-text-basket') 
              
                i(class='fas fa-shopping-cart cart_img') 
                span(class='button-text' id='cart-nav-title') 
          #exampleModal.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
            .modal-dialog.modal-dialog-scrollable.modal-dialog-centered 
              .modal-content
                .modal-header
                  //- h5#exampleModalLabel.modal-title Корзина
                  //- button.btn.btn-secondary(type='button', data-dismiss='modal button-primary-text but-pre') Закрыть
                  a(
                      class='order_button'
                      href='/order'
                      target='_blank'
                  ) 
                    button.btn.btn-primary.btn_order_head(type='button') Оформить заказ
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                    div(class='table_order2 one_section_table ')
                    div(id='cart-nav-preview')
                .modal-footer
                  button.close(type='button', data-dismiss='modal' aria-label='Close') Закрыть
                  a(
                     class='order_button'
                     href='/order'
                     target='_blank'
                  ) 
                    button.btn.btn-primary.btn_order_head(type='button') Оформить заказ


            
