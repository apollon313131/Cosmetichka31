div(class='container full-width')
  div(class='row header_row')
    div(class='col')
    div(class='site-name col col-lg-12 col-md-12')
      .header_title
        //- a(href="/")
        //- input(type='text' class='input input-search' placeholder='Введите имя товара')
        .span_title
          span 
            | г.Шебекино, ул.Московская 16А(2 Этаж) <br>
